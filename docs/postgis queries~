SELECT ST_AsText(a.geom), ST_AsText(b.geom), ST_Distance_Sphere(a.geom,b.geom) FROM dataset_a_geometries a, dataset_b_geometries b

SELECT GeometryType(a.geom), GeometryType(b.geom), ST_Distance(ST_Transform(a.geom, 3039), ST_Centroid(ST_Transform(b.geom,3039))) FROM dataset_a_geometries a, dataset_b_geometries b



